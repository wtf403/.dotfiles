{
  "title": "Tab Switch",
  "rules": [
    {
      "description": "ctrl+; --> cmd+shift+[",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.vscodium\\.VSCodiumInsiders$",
                "^com\\.microsoft\\.VSCode$",
                "^com\\.microsoft\\.VSCodeInsiders$",
                "^org\\.telegram\\.desktop$",
                "^com\\.tdesktop\\.Telegram$"
              ],
              "type": "frontmost_application_unless"
            }
          ],
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["command", "shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "ctrl+' --> cmd+shift+]",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.vscodium\\.VSCodiumInsiders$",
                "^com\\.microsoft\\.VSCode$",
                "^com\\.microsoft\\.VSCodeInsiders$",
                "^org\\.telegram\\.desktop$",
                "^com\\.tdesktop\\.Telegram$"
              ],
              "type": "frontmost_application_unless"
            }
          ],

          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["command", "shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "cmd+ctrl+; --> cmd+opt+shift+[",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.vscodium\\.VSCodiumInsiders$",
                "^com\\.microsoft\\.VSCode$",
                "^com\\.microsoft\\.VSCodeInsiders$"
              ],
              "type": "frontmost_application_unless"
            }
          ],

          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["control", "option"]
            }
          },
          "to": [
            {
              "key_code": "open_bracket",
              "modifiers": ["command", "option", "shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "cmd+ctrl+'--> cmd+opt+shift+]",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^com\\.vscodium\\.VSCodiumInsiders$",
                "^com\\.microsoft\\.VSCode$",
                "^com\\.microsoft\\.VSCodeInsiders$"
              ],
              "type": "frontmost_application_unless"
            }
          ],

          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control", "option"]
            }
          },
          "to": [
            {
              "key_code": "close_bracket",
              "modifiers": ["command", "option", "shift"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
