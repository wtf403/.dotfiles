{
  "title": "Emacs text editing",
  "rules": [
    {
      "description": "Ctrl+{a,e} --> End/Beginning of the line",
      "manipulators": [
        {
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.vscodium$",
                "^com\\.vscodium\\.VSCodiumInsiders$",
                "^com\\.microsoft\\.VSCodeInsiders$",
                "^com\\.microsoft\\.VSCode$",
                "^org\\.telegram\\.desktop$",
                "^com\\.tdesktop\\.Telegram$"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "e",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["option"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.vscodium$",
                "^com\\.vscodium\\.VSCodiumInsiders$",
                "^com\\.microsoft\\.VSCodeInsiders$",
                "^com\\.microsoft\\.VSCode$",
                "^org\\.telegram\\.desktop$",
                "^com\\.tdesktop\\.Telegram$"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Ctrl+{u,k} --> Delete before/after carriage",
      "manipulators": [
        {
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["option", "shift"]
            },
            {
              "key_code": "delete_or_backspace"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.vscodium$",
                "^com\\.vscodium\\.VSCodiumInsiders$",
                "^com\\.microsoft\\.VSCodeInsiders$",
                "^com\\.microsoft\\.VSCode$",
                "^org\\.yanex\\.marta$"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["control"],
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["option", "shift"]
            },
            {
              "key_code": "delete_or_backspace"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.googlecode\\.iterm2$",
                "^com\\.vscodium$",
                "^com\\.vscodium\\.VSCodiumInsiders$",
                "^com\\.microsoft\\.VSCodeInsiders$",
                "^com\\.microsoft\\.VSCode$",
                "^org\\.yanex\\.marta$"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
