{
  "title": "Telegram",
  "rules": [
    {
      "description": "Ctrl+; / Ctrl+' --> Telegram folder movement",
      "manipulators": [
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.telegram\\.desktop$",
                "^com\\.tdesktop\\.Telegram$"
              ]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": ["control"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["control", "shift"]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.telegram\\.desktop$",
                "^com\\.tdesktop\\.Telegram$"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
