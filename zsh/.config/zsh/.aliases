### trash ###
function del {
    if [[ "$@" == "." ]]; then
      D=${PWD##*/} && cd .. && command trash $D || cd $D
    else 
      command trash "$@"
    fi
}


function _del {
  local cur
  COMPREPLY=()
  cur="${COMP_WORDS[COMP_CWORD]}"
  case "${cur}" in
    .)
      COMPREPLY=('.')
      ;;
    *)
      COMPREPLY=($(compgen -f "${cur}"))
      ;;
  esac
}

complete -F _del del

