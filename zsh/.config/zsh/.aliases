function "??" () {
    if [[ "$1" == *"git"* ]]; then
        echo "git"
        gh copilot suggest -t git "$@"
    elif [[ "$1" == *"github"* ]]; then
        echo "gh"
        gh copilot suggest -t gh "$@"
    else
        echo "shell"
        gh copilot suggest -t shell "$@"
    fi
}

function "?!" () {
    if [[ "$1" == *"git"* ]]; then
        gh copilot explain -t git "$@"
    elif [[ "$1" == *"github"* ]]; then
        gh copilot explain -t gh "$@"
    else
        gh copilot explain -t shell "$@"
    fi
}

